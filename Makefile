NAME = containers
CC = clang++
FLAGS = -Wall -Werror -Wextra -std=c++98

#тЬзя╜ея╛Я: *тЬзя╜ея╛Я:*  *:я╜ея╛ЯтЬз*:я╜ея╛ЯтЬзтЬзя╜е *тЬзя╜ея╛Я:* SOURCES тЬз*:я╜ея╛ЯтЬз: *тЬзя╜ея╛Я:*  *:я╜ея╛ЯтЬз*:я╜ея╛ЯтЬзтЬзя╜ея╛Я: *тЬзя╜ея╛Я:#

SRC = 	containers.cpp vector.cpp

#тЬзя╜ея╛Я: *тЬзя╜ея╛Я:*  *:я╜ея╛ЯтЬз*:я╜ея╛ЯтЬзтЬзя╜е *тЬзя╜ея╛Я:* COLORS тЬз*:я╜ея╛ЯтЬз: *тЬзя╜ея╛Я:* тЬз *:я╜ея╛ЯтЬз*:я╜ея╛ЯтЬзтЬзя╜ея╛Я: *тЬзя╜ея╛Я:#

ORANGE	= 	\033[38;5;208m
YELLOW2	= \033[38;5;221m
WHITE	= \033[38;5;230m
RED		= \033[38;5;196m
RR		= \033[38;5;160m

#тЬзя╜ея╛Я: *тЬзя╜ея╛Я:*  *:я╜ея╛ЯтЬз*:я╜ея╛ЯтЬзтЬзя╜е *тЬзя╜ея╛Я:*  RULES  тЬз*:я╜ея╛ЯтЬз: *тЬзя╜ея╛Я:*  *:я╜ея╛ЯтЬз*:я╜ея╛ЯтЬзтЬзя╜ея╛Я: *тЬзя╜ея╛Я:#

all: $(NAME)

$(NAME): $(SRC)
	@$(CC) $(FLAGS) $(SRC) -o $(NAME)
	@echo "$(ORANGE)\n:█Ю:тАвтАв:█Ю::█Ю:тАвтАв:█Ю:тАвтАв:█Ю:тАвтАв:█Ю:тАвтАв:█Ю::█Ю:тАвтАв:"
	@echo "$(RED)ЁЯФе:█Ю:тАвтАв:█Ю:с┤Дс┤Пс┤Нс┤Ш╔к╩Яс┤Ас┤Ы╔кс┤П╔┤ с┤Ес┤П╔┤с┤З!:█Ю:тАвтАв:█Ю:ЁЯФе"
	@echo "$(ORANGE):█Ю:тАвтАв:█Ю::█Ю:тАвтАв:█Ю:тАвтАв:█Ю:тАвтАв:█Ю:тАвтАв:█Ю::█Ю:тАвтАв:"

stars:
	@echo "$(RR):█Ю:тАвтАв:█Ю:тАвтАв:█Ю:тАвтАв:█Ю:тАвтАв:█Ю::█Ю:тАвтАв:█Ю:тАвтАв:█Ю::"

clean:
	@echo "$(ORANGE)ЁЯМ╗█Ю:тАвтАв:█Ю:тАвтАв$(RED)я╝гя╜Мя╜Ея╜Бя╜Оя╜Йя╜Оя╜З$(ORANGE):█Ю:тАвтАв:█Ю::ЁЯТл$(WHITE)\n"
	rm -f ./*~ ./*# a.out $(OBJ)
	@echo "\n$(YELLOW2)тЬи:тАвтАв:█Ю:тАв:█Ю:$(RED)Cleaning Done!$(YELLOW2):█Ю:тАвтАв:█Ю:тАв:тЪб$(WHITE)"

fclean: clean stars
	@echo "$(ORANGE)ЁЯМ╗█Ю:тАвтАв:█Ю:$(RED)╩Ас┤Зс┤Нс┤Пс┤а╔к╔┤╔в $(NAME)$(ORANGE):█Ю:тАвтАв:█Ю:ЁЯТл\n$(WHITE)"
	rm -f $(NAME)
	@echo "\n$(YELLOW2)тЬи█Ю:тАвтАв:█Ю:$(RED)Removed $(NAME)!$(YELLOW2):█Ю:тАвтАв:█ЮтЪб$(WHITE)"

re: fclean all
